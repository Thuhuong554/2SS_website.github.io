<main class="bg-seashell">
    <!-- Form Shipping and Billing -->
    <div class="bg-seashell min-h-screen">
        <div class="container mx-auto flex items-center justify-center h-full pb-10 md:pt-40">
            <div class="mx-10 w-full max-w-6xl grid grid-cols-1 md:grid-cols-2 lg:gap-20 md:gap-8">
                <div class="billing-section">
                    <h2 class="text-xl md:text-2xl pt-5 font-bold mb-6 text-center">BILLING DETAIL</h2>
                    <!-- Billing form -->
                    <form id="billingForm">
                        <div class="mb-4">
                            <label for="firstName" class="block font-medium">First name <span
                                        class="text-red-500">*</span></label>
                            <input type="text" id="firstName" class="w-full mt-1 p-2 border rounded-md"
                                   name="firstName" required>
                        </div>
                        <div class="mb-4">
                            <label for="lastName" class="block font-medium">Last name <span
                                        class="text-red-500">*</span></label>
                            <input type="text" id="lastName" class="w-full mt-1 p-2 border rounded-md"
                                   name="lastName" required>
                        </div>
                        <div class="mb-4">
                            <label for="companyName" class="block font-medium">Company name <span
                                        class="text-red-500">*</span></label>
                            <input type="text" id="companyName" class="w-full mt-1 p-2 border rounded-md"
                                   name="companyName" required>
                        </div>
                        <div class="mb-4">
                            <label for="email" class="block font-medium">Email address <span
                                        class="text-red-500">*</span></label>
                            <input type="email" id="email" class="w-full mt-1 p-2 border rounded-md"
                                   name="email" required>
                        </div>
                        <div class="mb-4">
                            <label for="phone" class="block font-medium">Phone <span
                                        class="text-red-500">*</span></label>
                            <input type="tel" id="phone" class="w-full mt-1 p-2 border rounded-md" name="phone"
                                   required>
                        </div>
                        <div class="mb-4">
                            <label for="address" class="block font-medium">Address <span
                                        class="text-red-500">*</span></label>
                            <input type="text" id="address" class="w-full mt-1 p-2 border rounded-md"
                                   name="address" required>
                        </div>
                        <div class="mb-4">
                            <label for="orderNote" class="block font-medium">Order note <span
                                        class="text-red-500">*</span></label>
                            <textarea id="orderNote" class="w-full mt-1 p-2 border rounded-md"
                                      required></textarea>
                        </div>
                    </form>
                </div>
                <div class="order-section">
                    <h2 class="text-xl md:text-2xl font-bold mb-6 text-center">YOUR ORDER</h2>
                    <div class="bg-white shadow-2xl overflow-x-auto">
                        <table class="min-w-full border border-collapse">
                            <thead class="bg-metalic_bronze text-white px-5">
                            <tr>
                                <th class="py-2 text-center">Product</th>
                                <th class="py-2 text-center">Quantity</th>
                                <th class="py-2 text-center">Total</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td class="py-2 text-center pl-5">Strawberry Cupcake</td>
                                <td class="py-2 text-center">2</td>
                                <td class="py-2 text-center pr-5">50,000 VND</td>
                            </tr>
                            <tr>
                                <td class="py-2 text-center pl-5">Tiramisu</td>
                                <td class="py-2 text-center">3</td>
                                <td class="py-2 text-center pr-5 ">255,000 VND</td>
                            </tr>
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="3" class="py-2 text-center">
                                    <hr class="border-t border-gray-400">
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" class="py-2 text-left pl-5 ">Order total:</td>
                                <td class="py-2 text-center total-order pr-5"><span>305,000</span> VND</td>
                            </tr>
                            <tr>
                                <td colspan="2" class="py-2 text-left pl-5">Shipping:</td>
                                <td class="py-2 text-center shipping pr-5"><span>15,000</span> VND</td>
                            </tr>
                            <tr>
                                <td colspan="2" class="py-2 text-left pl-5">Voucher:</td>
                                <td class="py-2 text-center voucher pr-5 "><span>-15,000</span> VND</td>
                            </tr>
                            <tr>
                                <td colspan="2" class="py-5 text-xl text-left pl-5 font-bold underline">Total
                                    amount:
                                </td>
                                <td class="py-2 text-center total-amount pr-5"><span>305,000</span> VND</td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="flex justify-center mt-8">
                        <button type="submit" form="billingForm"
                                class="px-6 py-2 bg-red-500 text-white font-semibold rounded-md hover:bg-blue-600"
                                onclick="location.href='thank-you'">Place order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/src/scripts/icon_search_hover.js"></script>
<script src="/src/scripts/checkout.js"></script>
