<!-- Header -->
<header class="header bg-seashell">
    <!-- Header top -->
    <div class="content header_top py-2">
        <div class="flex-wrap text-sm lg:flex lg:gap-4 lg:items-center lg:justify-between">
            <div class="address-hotline text-right flex text-start sm:flex-col lg:flex-row gap-3">
                <p><b>Address:</b> 158A Le Loi, Hai Chau 1 ward, Hai Chau district, Da Nang city </p>

                <p><b>Hotline</b>: 84-905-323-959 | 84-838-446-667</p>
            </div>
            <div class="flex pt-3 justify-end lg:items-center gap-2 lg:gap-5 sm:hidden">
                <div class="dropdown-box">
                    <select class="form-control border-gray-300 bg-seashell rounded-md w-full text-center">
                        <option value="USD">USD</option>
                        <option value="SGD">SGD</option>
                        <option value="EUR">EUR</option>
                        <option value="JPY">JPY</option>
                    </select>
                </div>
                <div class="dropdown-box">
                    <select class="form-control border-gray-300 bg-seashell rounded-md w-full text-center">
                        <option value="en">English</option>
                        <option value="ja">Japanese</option>
                        <option value="zh">Chinese</option>
                    </select>
                </div>
                <a id="search-icon" class="search-icon cursor-pointer">
                    <img class="w-8 h-8"
                         src="https://cdn1.iconfinder.com/data/icons/seo-and-web-development-6/32/development_search_magnifier_magnifying_glass_loupe-67-512.png"
                         alt="Search Icon" loading="lazy">
                </a>
            </div>
        </div>
    </div>

    <!-- Header top end -->

    <!-- Banner -->
    <div class="Banner relative">
        <!-- Navigate bar -->
        <nav class="bg-seashell bg-opacity-90 border border-dashed border-5 border-black relative py-2 z-10">
            <div class="content mx-auto flex items-center justify-between px-4 sm:px-6 lg:px-10">
                <div class="flex items-center">
                    <a href="/">
                        <img src="/img/Logo.png" alt="Logo"
                             class="w-8 h-8 sm:w-10 sm:h-10 md:w-14 md:h-14 lg:w-20 lg:h-20 rounded-full" width="80"
                             height="80" loading="lazy">
                    </a>
                </div>
                <div class="flex items-center space-x-9 sm:space-x-10 md:space-x-10 lg:space-x-20 xl:space-x-80">
                    <a href="/" class="text-xs sm:text-sm md:text-lg font-semibold hover:underline">Home</a>
                    <a href="/menu" class="text-xs sm:text-sm md:text-lg font-semibold hover:underline">Menu</a>
                    <a href="/checkout"
                       class="text-xs sm:text-sm md:text-lg font-semibold hover:underline">Checkout</a>
                </div>
                <div class="flex items-center">
                    <div class="relative" id="cartContainer">
                        <a href="/cart" class="text-lg font-semibold relative" id="cartIcon">
                            <img src="https://cdn4.iconfinder.com/data/icons/glyphs/24/icons_cart-512.png" alt="Cart"
                                 class="h-6 w-6" width="24" height="24" loading="lazy">
                        </a>
                        <div class="absolute top-8 right-0 w-64 sm:w-72 bg-pink-100 border border-gray-300 shadow-lg hidden"
                             id="cartPopup">
                            <div id="popup-content">
                                <!-- Cart popup content will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Poster -->
        <div class="relative banner h-60 md:h-64 flex items-end justify-center text-white">
            <div class="absolute inset-0 bg-black opacity-50"></div>
            <div class="relative z-10 text-center lg:pb-5">
                <h1 class="text-l pt-5 md:text-xl lg:text-4xl font-bold font-serif">MENU</h1>
                <nav class="lg:mt-2 mb-2">
                    <a href="/" class="text-gray-400">Home</a> /
                    <span class="text-red-500"><%= typeof pageTitle !== 'undefined' ? pageTitle : '' %></span>
                </nav>
            </div>
        </div>
        <!-- Poster end -->
</header>